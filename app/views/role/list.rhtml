<div id="content">
	<div>
		<div class="content">
			<h1 class="title style1">Lista de Perfis</h1>
			<br />
			<table border>
				<tr align="center">
					<th>Código</th>
					<th>Nome</th>
					<th>Excluir</th>
				</tr>
				<% for role in @roles %>
				<tr align="center">
					<td><%=h role.codigo %></td>
					<td><%=h role.nome %></td>
					<td><%= link_to image_tag("del.png", :border => 0, :alt => 'Apagar'), { :action => 'destroy', :id => role }, :confirm => 'Tem certeza que deseja excluir este perfil?', :method => "post" %></td>
				</tr>
				<% end %>
			</table>
			<p>
				<%= link_to image_tag("PreviousPage.gif", :border => 0, :alt => 'Anterior'), { :page => @role_pages.current.previous } if @role_pages.current.previous %>
				<% for page in @role_pages %>
				    &nbsp;<%= link_to_unless(params[:page].to_i == page.number, page.number, {:params => params.merge('page' => page)}) %>&nbsp;
				<% end -%>
				<%= link_to image_tag("NextPage.gif", :border => 0, :alt => 'Próxima'), { :page => @role_pages.current.next } if @role_pages.current.next %>
			</p>
			<p><%= link_to image_tag("add.png", :border => 0, :alt => 'Adicionar perfil'), {:action => 'new'}, :method => "post" %> | <%= link_to image_tag("goBack.gif", :border => 0, :alt => 'Voltar'), {:controller => "user", :action => 'welcome'} %></p>
	  	</div>
	</div>
</div>
