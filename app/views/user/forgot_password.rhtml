<div id="content">
	<div>
		<div class="content">
			<h1 class="title style1">Esqueci Minha Senha</h1>
			<br />
			<%= error_messages_for 'user' %>
			<% form_for :user, :url=>{:action => 'forgot_password'} do |form| %>
				<label for="user_email">E-mail:</label>
				<br/>
				<%= form.text_field "email", :size => 45, :maxlength => 45 %>
				<br/><br/>
				<%= submit_tag "Enviar Senha" %>
			<% end %>
	  	</div>
	</div>
</div>
