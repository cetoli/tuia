<div id="content">
	<div>
		<div class="content">
			<h1 class="title style1">Lista de Seminários</h1>
			<br />
			<table border>
				<tr align="center">
					<th>Título</th>
					<th>Criado Por</th>
					<th>Data de Criação</th>
					<th>Aprovado</th>
					<th colspan="2">Comandos</th>
				</tr>
				<% for seminario in @seminarios %>
				<tr align="center">
					<td><%=h seminario.titulo %></td>
					<td><%=h seminario.user.nome %></td>
					<td><%=h short_date_time seminario.criado %></td>
					<td><%=h seminario.aprovado ? 'Sim' : '-' %></td>
					<td><%= link_to image_tag("opn.png", :border => 0, :alt => 'Mostrar'), :action => 'show', :id => seminario %></td>
					<td><%= link_to image_tag("del.png", :border => 0, :alt => 'Apagar'), { :action => 'destroy', :id => seminario }, :confirm => 'Tem certeza que deseja excluir este seminário?', :method => "post" %></td>
				</tr>
				<% end %>
			</table>
			<p>
				<%= link_to image_tag("PreviousPage.gif", :border => 0, :alt => 'Anterior'), { :page => @seminario_pages.current.previous } if @seminario_pages.current.previous %>
				<% for page in @seminario_pages %>
				    &nbsp;<%= link_to_unless(params[:page].to_i == page.number, page.number, {:params => params.merge('page' => page)}) %>&nbsp;
				<% end -%>
				<%= link_to image_tag("NextPage.gif", :border => 0, :alt => 'Próxima'), { :page => @seminario_pages.current.next } if @seminario_pages.current.next %>
			</p>
			<p><%= link_to image_tag("add.png", :border => 0, :alt => 'Adicionar seminário'), {:action => 'new'} %> | <%= link_to image_tag("goBack.gif", :border => 0, :alt => 'Voltar'), {:controller => "user", :action => 'welcome'} %></p>
	  	</div>
	</div>
</div>
